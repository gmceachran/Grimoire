# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Database Configuration (Legacy - for pg connection)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grimoire
DB_USER=your_username
DB_PASSWORD=your_password

# Prisma Database URLs (separate environments)
DATABASE_URL="postgresql://username:password@localhost:5432/grimoire_dev"
DATABASE_URL_DEV="postgresql://username:password@localhost:5432/grimoire_dev"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/grimoire_test"
DATABASE_URL_PROD="postgresql://username:password@localhost:5432/grimoire_prod"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
